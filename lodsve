# Help info function
help(){
  echo "--------------------------------------------------------------------------"
  echo ""
  echo "usage: ./lodsve.sh [versions | deploy-oss | deploy-third]"
  echo ""
  echo "versions          Update lodsve-boot versions."
  echo "deploy-oss        Deploy lodsve-boot to maven repository."
  echo "deploy-third      Deploy lodsve-boot to Third repository."
  echo ""
  echo "--------------------------------------------------------------------------"
}


# Start
sh ./tools/logo.sh
case "$1" in
  'versions')
    bash ./tools/versions.sh $2
	;;
  'deploy-oss')
    bash ./tools/deploy.sh release-oss $2
	;;
  'deploy-third')
    bash ./tools/deploy.sh release-third $2
	;;
  *)
    help
esac
